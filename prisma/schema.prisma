datasource db {
 provider = "postgresql"
 url      = env("PRISMA_DATABASE_URL")
}

generator client {
 provider = "prisma-client-js"
}

// Enum for user account types
enum AccountType {
 BASIC
 SELLER
 ADMIN
}

model User {
 id           Int       @id @default(autoincrement())
 email        String    @unique
 name         String
 password     String
 accountType  AccountType @default(BASIC)  // BASIC, SELLER, ADMIN
 about_me     String?
 products     Product[]   // Products added by user (e.g. SELLER)
 ratings      Rating[]    // Ratings left by user
 reviews      Review[]    // Written reviews left by user
 createdAt    DateTime  @default(now())
 updatedAt    DateTime  @updatedAt
}

model Product {
 id          Int       @id @default(autoincrement())
 name        String
 description String?   // Not required
 price       Float
 image       String    // Href or URL to image
 userId      Int
 categoryId  Int

 user        User       @relation(fields: [userId], references: [id])
 category    Category   @relation(fields: [categoryId], references: [id])
 ratings     Rating[]   // A Product's ratings
 reviews     Review[]   // Written reviews for this product

 createdAt   DateTime   @default(now())
 updatedAt   DateTime   @updatedAt
}

model Rating {
 id        Int      @id @default(autoincrement())
 rating    Int    
 comment   String?  //Not required
 userId    Int
 productId Int

 user      User     @relation(fields: [userId], references: [id])
 product   Product  @relation(fields: [productId], references: [id])

 createdAt DateTime @default(now())
}



model Review {
 id        Int      @id @default(autoincrement())
 rating    Int      // 1-5 stars
 comment   String   // Written review text
 userId    Int
 productId Int
 user      User     @relation(fields: [userId], references: [id])
 product   Product  @relation(fields: [productId], references: [id])
 createdAt DateTime @default(now())
 
 @@unique([userId, productId]) // One review per user per product
}

model Category {
 id        Int       @id @default(autoincrement())
 name      String    @unique
 products  Product[] // Products in each Category
}